@model StudentSystem.Models.Student
  
<div class="row text-center">

    <div class=" col-md-12 col-xs-10 Form col-xs-push-1 col-lg-push-5 col-md-push-5 col-md-pull-5 col-sm-push-4 col-xl-push-4"  id="FormBegin" >

        <h1>Register </h1>
        

      

        <form id="Form-Body">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.TextBoxFor(Model => Model.stuName, new { @class = "name form-control ", placeholder = "Enter the Student Name" })
            @Html.ValidationMessageFor(model => model.stuName, "", new { @class = "text-danger" })
            <span class="Error" id="nameErr">Error</span>
            <br />


            @Html.TextBoxFor(Model => Model.email, new { type = "email", @class = "name form-control ", placeholder = "Enter your Email Address" })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            <span class="Error" id="emailErr"></span>
            <br />

            @Html.PasswordFor(Model => Model.pwd, new { @class = "name form-control", @id = "pwd", placeholder = "Password" })
            @Html.ValidationMessageFor(model => model.pwd, "", new { @class = "text-danger" })
            <span class="Error" id="pwdErr"></span>
            <br />


            @Html.Password("Confirm", "", new { @class = "name form-control", @id = "cpwd", placeholder = "Confirm Password" })
            <span class="Error" id="cpwdErr"></span>

            <br />

            <select id="countryCode"></select>
            @Html.TextBoxFor(Model => Model.mobNo, new { @class = "name form-control", placeholder = "Enter mobile Number" })
            @Html.ValidationMessageFor(model => model.mobNo, "", new { @class = "text-danger" })
            <span class="Error" id="mobErr"></span>
            <br />

            @Html.TextBoxFor(Model => Model.Address, new { @class = "name form-control", placeholder = "Address" })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            <span class="Error" id="addrErr"></span>
            <br />
            @Html.TextBoxFor(Model => Model.classname, new { @class = "name form-control", placeholder = "Class Name" })
            @Html.ValidationMessageFor(model => model.classname, "", new { @class = "text-danger" })

            @Html.TextBoxFor(Model => Model.SchoolName, new { @class = "name form-control", placeholder = "School Name" })
            @Html.ValidationMessageFor(model => model.SchoolName, "", new { @class = "text-danger" })
            <span class="Error" id="addrErr"></span>
            <button id="butt" class="btn btn-success " type="submit" formmethod="post">Submit</button>
        </form>
        <script src="~/Scripts/Validation.js" type="text/javascript"></script>
        <script src="~/Scripts/countryCode.js"></script>
        <h4 style="color:azure">
            Already an User?? Then @Html.ActionLink("Sign In", "Login","Login")
        </h4>
    </div>
</div>
