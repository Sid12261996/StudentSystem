@model StudentSystem.Models.LoginUser


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Login</h4>
        <h5>@ViewData["SignINerror "]</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 col-xs-10">
                @Html.LabelFor(Model => Model.Email)<br />
                @Html.TextBoxFor(model => model.Email, new { @class = "name form-control " })<br /><br />
                @Html.LabelFor(Model => Model.Password)
                @Html.PasswordFor(Model => Model.Password, new { @class = "name form-control", id = "" })
                <input type="submit" value="Log In" class="btn btn-default" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
